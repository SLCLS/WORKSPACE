{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Build active file",
            "type": "shell",
            "command": "${config:cpp.compilerPath}",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Cross-compatible build task for Windows & Codespace"
        }
    ]
}