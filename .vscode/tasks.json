{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Build active file",
            "type": "shell",
            "command": "${config:cpp.compilerPath}",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}${execExt}",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Cross-compatible build task for Windows & Codespace"
        },

        // --- Pauses the PowerShell window after program exits (Windows only) ---
        {
            "label": "pause-window",
            "type": "shell",
            "command": "powershell",
            "args": ["-Command", "Read-Host 'Press ENTER to exit'"],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated"
            }
        }
    ]
}
